<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <title>Drive</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        @keyframes fade-in-down {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-down {
            animation: fade-in-down 0.5s ease-out;
        }
    </style>
</head>

<body>
    <main
        class="p-4 bg-gradient-to-br from-gray-100 to-blue-100 dark:from-gray-900 dark:to-gray-800 h-screen w-screen flex flex-col items-center justify-center">

        <!-- Upload Button -->
        <button onclick="showPopUp()"
            class="fixed top-4 left-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded z-20">
            Upload File
        </button>

        <!-- Upload Box -->
        <div
            class="pop hidden backdrop-blur-sm bg-white/30 dark:bg-gray-900/30 fixed top-0 left-0 h-screen w-screen flex items-center justify-center z-10">

            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="flex items-center justify-center w-96 animate-fade-in-down">
                    <label for="dropzone-file"
                        class="flex flex-col items-center justify-center w-full h-64 border-2 border-dashed rounded-2xl cursor-pointer bg-white/80 dark:bg-gray-700 hover:bg-blue-50 dark:hover:bg-gray-600 border-gray-300 dark:border-gray-600 transition-all duration-300 shadow-md hover:shadow-2xl">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-10 h-10 mb-4 text-gray-500 dark:text-gray-400 animate-bounce"
                                aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
                            </svg>
                            <p class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-300 text-center">Click to
                                <span class="text-blue-600 dark:text-blue-400 font-semibold">upload</span> or drag and
                                drop
                            </p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG, GIF (MAX. 800x400px)</p>
                        </div>
                        <input id="dropzone-file" type="file" class="hidden" name="file" />
                    </label>
                </div>

                <button class="bg-gray-600 hover:bg-gray-700 text-white py-2 px-6 mt-2 rounded-lg ">Upload File</button>

            </form>

            <button onclick="hidePopUp()"
                class=" absolute top-4 right-4 bg-gary-600 hover:bg-gary-700 text-xl"><i class="ri-close-large-line"></i></button>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>

    <script>

        function showPopUp() {
            document.querySelector('.pop').style.display = 'flex'
        }
        function hidePopUp() {
            document.querySelector('.pop').style.display = 'none'
        }
    </script>
</body>

</html>